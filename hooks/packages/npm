#!/bin/bash
set -e

cat <<MSG
===============================================
||           Updating NPM Packages           ||
===============================================
MSG

PACKAGES=""
function __add_package() {
  PACKAGES="$1 $PACKAGES"
}

# ----------------------
# | Add packages below |
# ----------------------

__add_package "diff-so-fancy"
__add_package "gitbook-cli"
__add_package "git-guilt"
__add_package "eslint"
__add_package "spoof"

# ------------------------
# | Done adding packages |
# ------------------------

cat <<MSG
---------------------------------
>> PACKAGES: $PACKAGES
---------------------------------
MSG

npm install -g npm@latest yarn@latest $PACKAGES

cat <<MSG
---------------------------------
>> Done.
---------------------------------
MSG

