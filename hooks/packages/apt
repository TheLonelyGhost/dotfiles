#!/bin/bash
set -e

cat <<MSG
===============================================
||      Updating Debian/Ubuntu Packages      ||
===============================================
MSG

sudo apt-get update -y

sudo apt-get install -y build-essential ruby-dev openssl \
  exuberant-ctags nodejs npm gnupg-agent gnupg2 silversearcher-ag \
  dos2unix golang keychain xclip tmux apt-transport-https

cat <<MSG
Creating alias commands for Debian/Ubuntu package drop-in replacements...
MSG
command -v ctags > /dev/null || \
  sudo ln -v -s "$(command -v ctags-exuberant)" "/usr/local/bin/ctags" 
command -v node > /dev/null || \
  sudo ln -v -s "$(command -v nodejs)" "/usr/local/bin/node"
