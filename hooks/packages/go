#!/bin/bash
set -e

export GOPATH=${GOPATH:-"${HOME}/.go"}

PACKAGES=""
function __add_package() {
  PACKAGES="$1 $PACKAGES"
}

# ----------------------
# | Add packages below |
# ----------------------

command -v tag &>/dev/null || \
  __add_package "github.com/aykamko/tag"
command -v jid &>/dev/null || \
  __add_package "github.com/simeji/jid/cmd/jid"

# ------------------------
# | Done adding packages |
# ------------------------

if [ ! -z "$PACKAGES" ]; then
  cat <<MSG

PACKAGES: $PACKAGES

MSG

  go get -u $PACKAGES
fi

