#!/bin/bash
set -e

brew update

brew bundle --file=- <<EOF

tap "thoughtbot/formulae"
tap "homebrew/services"
tap "homebrew/dupes"
tap "caskroom/cask"
tap "neovim/neovim"

# Unix
brew "tree"
brew "ctags"
brew "git"
brew "wget"
brew "openssl"
brew "rcm"
brew "reattach-to-user-namespace"
brew "the_silver_searcher"
brew "tmux"
brew "vim"
brew "neovim"
brew "direnv"
brew "zsh"
brew "gpg-agent"
brew "gnupg2"
brew "keychain"
brew "tree"
brew "watch"
brew "grep", with_default_names: true
brew "dos2unix"

# Image manipulation
brew "imagemagick"

# Testing
brew "qt"

# Programming languages
brew "libyaml" # should come after openssl
brew "node"
brew "python3" # needed for git-fixup
brew "go"

# Databases
brew "postgres", restart_service: true
brew "redis", restart_service: true
brew "mongodb", restart_service: true

# Default GUI workstation
cask "dropbox"
cask "google-chrome"
cask "flux"
cask "vagrant"
cask "virtualbox"
EOF
