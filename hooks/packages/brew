#!/bin/bash
set -euo pipefail

if [ ! -e /usr/include/zlib.h ] && command -v 'defaults' 1>/dev/null 2>/dev/null; then
  # Fix issue in macOS Mojave where XCode doesn't install headers for installed libraries
  if [[ $(defaults read loginwindow SystemVersionStampAsString) =~ 10.14* ]] && [ -e /Library/Developer/CommandLineTools/Packages/macOS_SDK_headers_for_macOS_10.14.pkg ]; then
    sudo installer -pkg /Library/Developer/CommandLineTools/Packages/macOS_SDK_headers_for_macOS_10.14.pkg -target /
  fi
fi

env PYENV_VERSION='system' brew update

env PYENV_VERSION='system' brew bundle --file=- <<EOF
# NOTE: Casks up front so we'll be prompted by sudo right away, then wait for rest of user-scoped installations
tap "homebrew/services"
tap "caskroom/cask"
tap "caskroom/fonts"
tap "neovim/neovim"
tap "theseal/ssh-askpass"

# Default GUI workstation
cask "font-twitter-color-emoji" unless ::File.exist?("${HOME}/Library/Fonts/TwitterColorEmoji-SVGinOT.ttf")
cask "google-chrome"
# cask "vagrant"  # latest version of vagrant is borked, as of v2.2.1. Last known good is v2.0.4
cask "alfred"
cask "virtualbox"
cask "virtualbox-extension-pack"
cask "docker"
cask "telegram"
cask "evernote"
cask "firefox"
cask "simplenote"
cask "spectacle"
cask "font-source-code-pro" unless ::Dir.glob("#{::File.expand_path('~')}/Library/Fonts/SourceCodePro-*.otf").any?
cask "chef/chef/chefdk"
brew "habitat-sh/habitat/hab"

# Unix
brew "tree"
brew "ctags"
brew "git"
brew "openssl"
brew "thoughtbot/formulae/rcm"
brew "reattach-to-user-namespace"
brew "the_silver_searcher"
brew "tmux"
brew "neovim"
brew "zsh"
brew "gnupg"
brew "keychain"
brew "ssh-askpass"
brew "tree"
brew "watch"
brew "dos2unix"

# Fix MacOS with GNU
brew "ed"
brew "coreutils"
brew "binutils"
brew "gnutls"
brew "gzip"
brew "wget"
brew "bash"
brew "bash-completion"
brew "make"
brew "less"
brew "openssh"
brew "rsync"
brew "unzip"
brew "parallel"
brew "netcat"

# Image manipulation
brew "gifsicle"
brew "ffmpeg"

# Appearance
brew "dark-mode"

# Testing
brew "shellcheck"
brew "go"
brew "qt"
cask "phantomjs"
brew "mitmproxy"
brew "jq"

# Programming languages
brew "libyaml" # should come after openssl
brew "node"
brew "sqlite"
EOF
