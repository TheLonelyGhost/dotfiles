#!/bin/bash
set -e

PACKAGES=""
function __add_package() {
  PACKAGES="$1 $PACKAGES"
}

# ----------------------
# | Add packages below |
# ----------------------

__add_package "bundler"
__add_package "rake"

# ------------------------
# | Done adding packages |
# ------------------------

cat <<MSG

PACKAGES: $PACKAGES

MSG

gem install $PACKAGES

if command -v rbenv &>/dev/null; then
  rbenv rehash
fi

