#!/bin/bash
set -e

PACKAGES=""
function __add_package() {
  PACKAGES="$1 $PACKAGES"
}

# ----------------------
# | Add packages below |
# ----------------------

__add_package "pylint"

# ------------------------
# | Done adding packages |
# ------------------------

cat <<MSG

PACKAGES: $PACKAGES

MSG

pip install --user $PACKAGES | grep -v 'Requirement already satisfied' \
  || true
pip install --user -U $PACKAGES | grep -v 'Requirement already up-to-date' \
  || true

