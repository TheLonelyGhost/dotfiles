# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias vim="nvim -p"
alias vimdiff='nvim -d'
alias cat='bat'
alias rg='tag --pcre2'
alias rot13="tr 'A-Za-z' 'N-ZA-Mn-za-m'"

# For other aliases that use sudo...
alias sudo="sudo "

# Because https://github.com/direnv/direnv/wiki/Tmux
alias tmux='direnv exec / tmux'

# Typos
alias :q='exit'

# Ruby
alias ruby-install="ruby-install --src-dir ~/.ruby-install/src"

# Bundler
alias b="bundle"
alias be="bundle exec"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Command should append to ~/.ssh/known_hosts automatically in 99.9999% of cases
alias ssh-keyscan='ssh-known'
