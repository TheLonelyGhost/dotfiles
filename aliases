# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias vim='nvim'
alias cat='bat'

if command -v apt &>/dev/null; then
  alias apt="sudo apt "
  alias sudo="sudo "
fi

alias tmux='direnv exec / tmux'  # Because https://github.com/direnv/direnv/wiki/Tmux

if ls --color=auto &>/dev/null; then
  alias ls="ls -F --color=auto"
else
  alias ls="ls -FG"
fi

# Typos
alias :q='exit'

# Ruby
alias ruby-install="ruby-install --src-dir ~/.ruby-install/src"

# Bundler
alias b="bundle"
alias be="bundle exec"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local || true
