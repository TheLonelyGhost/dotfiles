# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias vim='nvim'
alias vimdiff='nvim -d'
alias cat='bat'

# For other aliases that use sudo...
alias sudo="sudo "

# Because https://github.com/direnv/direnv/wiki/Tmux
alias tmux='direnv exec / tmux'

# Typos
alias :q='exit'

# Ruby
alias ruby-install="ruby-install --src-dir ~/.ruby-install/src"

# Bundler
alias b="bundle"
alias be="bundle exec"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local || true
