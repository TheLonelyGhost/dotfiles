# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias vim="$(command -v nvim) -p"
alias vimdiff='nvim -d'
alias cat='bat'

# For rcm to work despite version changers...
alias rcup='env PYENV_VERSION=system rcup'
alias rcdn='env PYENV_VERSION=system rcdn'
alias lsrc='env PYENV_VERSION=system lsrc'
alias mkrc='env PYENV_VERSION=system mkrc'
alias brew='env PYENV_VERSION=system brew'

# For other aliases that use sudo...
alias sudo="sudo "

# Because https://github.com/direnv/direnv/wiki/Tmux
alias tmux='direnv exec / tmux'

# Typos
alias :q='exit'

# Ruby
alias ruby-install="ruby-install --src-dir ~/.ruby-install/src"

# Bundler
alias b="bundle"
alias be="bundle exec"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local || true
