#!/bin/bash
set -e

GEM_HOME="$HOME/.gem"
GEM_PATH=$(
  [ -z $GEM_PATH ] && \
    echo $GEM_HOME \
    || \
    echo "${GEM_HOME}:${GEM_PATH}"
)

unset MANPATH
MANPATH="$(manpath)"

NPM_PACKAGES="$HOME/.npm-packages"
NODE_PATH=$(
  [ -z $NODE_PATH ] && \
    echo "${NPM_PACKAGES}/lib/node_modules" \
    || \
    echo "${NPM_PACKAGES}/lib/node_modules:${NODE_PATH}"
)

PATH="$NPM_PACKAGES/bin:$PATH"
MANPATH="$NPM_PACKAGES/share/man:$MANPATH"

[ -f "$HOME/.path.local" ] && \
  source "$HOME/.path.local" \
  || true

export MANPATH NPM_PACKAGES NODE_PATH GEM_PATH GEM_HOME
